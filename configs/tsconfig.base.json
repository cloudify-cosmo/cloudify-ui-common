{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "jsx": "react",
        "sourceMap": true,
        // TODO: add lib
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,

        "esModuleInterop": true,
        "isolatedModules": true,

        // Just for eliminating warnings about output JS files overwriting source JS files
        "noEmit": true,

        // Enabled while there are still JS files
        "allowJs": true,
        "checkJs": true
    }
}
