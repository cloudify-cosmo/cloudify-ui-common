{
    "extends": [
        "airbnb-base",
        "./eslint-common.json",
        "plugin:chai-friendly/recommended",
        "plugin:cypress/recommended"
    ],
    "rules": {
        "import/no-extraneous-dependencies": "off"
    },
    "env": {
        "cypress/globals": true
    },
    "overrides": [
        {
            "files": ["./support/*.ts"],
            "rules": {
                // NOTE: used for declaring custom Cypress commands
                "@typescript-eslint/no-namespace": "off"
            }
        }
    ]
}
