{
    "extends": [
        "./eslint-common.json",
        "airbnb",
        "prettier/react",
        "plugin:prettier/recommended",
        "./eslint-ts-overrides.json"
    ],
    "rules": {
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }]
    },
    "overrides": [
        {
            "files": ["*.tsx"],
            "rules": {
                "react/prop-types": "off"
            }
        }
    ],
    "env": {
        "browser": true
    }
}
