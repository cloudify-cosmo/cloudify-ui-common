{
    "name": "cloudify-ui-common",
    "version": "1.6.2",
    "description": "Common Cloudify UI library",
    "homepage": "https://github.com/cloudify-cosmo/cloudify-ui-common#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cloudify-cosmo/cloudify-ui-common.git"
    },
    "license": "Apache-2.0",
    "author": "Cloudify Platform Ltd. <cosmo-admin@cloudify.co>",
    "files": [
        "dist",
        "eslint",
        "fonts",
        "images",
        "scripts",
        "styles"
    ],
    "main": "dist/cloudify-ui-common.cjs.js",
    "module": "dist/cloudify-ui-common.esm.js",
    "browser": "dist/cloudify-ui-common.min.js",
    "scripts": {
        "audit": "npm audit --production",
        "build": "npm run build:code && npm run build:docs",
        "build:code": "rollup -c",
        "build:docs": "npm run docs && cp src/README.md dist",
        "dev": "rollup -c -w",
        "docs": "documentation build src/index.js -c documentation.yml -f md > src/README.md",
        "lint": "npm run lint:code",
        "lint:code": "eslint src test",
        "lint:docs": "documentation lint src/index.js",
        "publish:major": "bash ci/publish-version.sh major",
        "publish:minor": "bash ci/publish-version.sh minor",
        "publish:patch": "bash ci/publish-version.sh patch",
        "test": "npm run lint && npm run test:coverage",
        "test:coverage": "jest test --coverage",
        "test:docs": "npm run docs && npm run verify:docs",
        "test:only": "jest test",
        "verify:docs": "bash ci/verify-docs.sh"
    },
    "dependencies": {
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.4.0"
    },
    "devDependencies": {
        "@babel/core": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "babel-jest": "^24.9.0",
        "documentation": "^12.1.4",
        "eslint": "^6.7.2",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsdoc": "^15.5.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-scanjs-rules": "^0.2.1",
        "eslint-plugin-security": "^1.4.0",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "rollup": "^1.28.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.1.3"
    },
    "peerDependencies": {
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "eslint-plugin-scanjs-rules": "^0.2.1",
        "eslint-plugin-security": "^1.4.0"
    }
}
