{
    "name": "cloudify-ui-common",
    "version": "1.2.0",
    "description": "Common Cloudify UI library",
    "homepage": "https://github.com/cloudify-cosmo/cloudify-ui-common#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cloudify-cosmo/cloudify-ui-common.git"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Jakub Niezgoda",
        "email": "jakub.niezgoda@cloudify.co",
        "url": "https://github.com/qooban"
    },
    "files": [
        "dist",
        "fonts",
        "images",
        "scripts",
        "styles"
    ],
    "main": "dist/cloudify-ui-common.cjs.js",
    "module": "dist/cloudify-ui-common.esm.js",
    "browser": "dist/cloudify-ui-common.min.js",
    "scripts": {
        "build": "npm run build:code && npm run build:docs",
        "build:code": "rollup -c",
        "build:docs": "npm run docs && cp src/README.md dist",
        "dev": "rollup -c -w",
        "docs": "documentation build src/index.js -c documentation.yml -f md > src/README.md",
        "lint": "npm run lint:code",
        "lint:code": "eslint src test",
        "lint:docs": "documentation lint src/index.js",
        "publish:major": "sh ci/publish-version.sh major",
        "publish:minor": "sh ci/publish-version.sh minor",
        "publish:patch": "sh ci/publish-version.sh patch",
        "test": "npm run lint && npm run test:coverage",
        "test:coverage": "jest test --coverage",
        "test:docs": "npm run docs && npm run verify:docs",
        "test:only": "jest test",
        "verify:docs": "sh ci/verify-docs.sh"
    },
    "devDependencies": {
        "@babel/core": "^7.5.4",
        "@babel/preset-env": "^7.5.4",
        "babel-jest": "^24.8.0",
        "documentation": "^12.0.2",
        "eslint": "^6.0.1",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsdoc": "^15.5.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-scanjs-rules": "^0.2.1",
        "eslint-plugin-security": "^1.4.0",
        "jest": "^24.8.0",
        "prettier": "^1.18.2",
        "rollup": "^1.16.7",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.0.1",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^5.1.1"
    },
    "peerDependencies": {
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-scanjs-rules": "^0.2.1",
        "eslint-plugin-security": "^1.4.0"
    }
}
