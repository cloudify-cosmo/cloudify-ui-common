{
  "name": "cloudify-ui-common",
  "version": "1.0.0",
  "description": "Common Cloudify UI library",
  "main": "dist/cloudify-ui-common.cjs.js",
  "module": "dist/cloudify-ui-common.esm.js",
  "browser": "dist/cloudify-ui-common.min.js",
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "babel-jest": "^24.8.0",
    "documentation": "^12.0.2",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsdoc": "^15.5.3",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "rollup": "^1.16.7",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "docs": "documentation build src/index.js -c documentation.yml -f md > src/README.md",
    "lint": "npm run lint:code",
    "lint:code": "eslint src test",
    "lint:docs": "documentation lint src/index.js",
    "prepare": "npm test && npm run build",
    "publish:patch": "sh version.sh patch",
    "publish:minor": "sh version.sh minor",
    "publish:major": "sh version.sh major",
    "test": "npm run lint && npm run test:coverage",
    "test:only": "jest test",
    "test:coverage": "jest test --coverage",
    "test:docs": "npm run docs && npm run verify:docs",
    "verify:docs": "git diff --exit-code ./src/README.md || echo Run `npm run docs` and commit updated `src/README.md` file."
      
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudify-cosmo/cloudify-ui-common.git"
  },
  "files": [
    "index.js",
    "dist",
    "fonts",
    "images",
    "scripts",
    "styles"
  ],
  "author": "Jakub Niezgoda",
  "license": "Apache-2.0",
  "homepage": "https://github.com/cloudify-cosmo/cloudify-ui-common#readme"
}
