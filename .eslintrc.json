{
    "extends": ["plugin:jsdoc/recommended", "./configs/eslint-common.json"],
    "rules": {
        "jsdoc/require-jsdoc": [
            "error",
            {
                "publicOnly": true
            }
        ]
    },
    "settings": {
        "jsdoc": {
            "preferredTypes": {
                "object": "Object"
            }
        }
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                // NOTE: covered by TypeScript
                "jsdoc/require-returns": "off",
                "jsdoc/require-param-type": "off"
            }
        }
    ]
}
