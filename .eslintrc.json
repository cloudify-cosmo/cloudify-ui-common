{
    "extends": ["plugin:jsdoc/recommended"],
    "rules": {
        "jsdoc/require-jsdoc": [
            "error",
            {
                "publicOnly": true
            }
        ]
    },
    "settings": {
        "jsdoc": {
            "preferredTypes": {
                "object": "Object"
            }
        }
    },
    "overrides": [
        {
            "files": ["**/*.js"],
            "extends": ["./packages/configs/eslint-common-node.json"]
        }
    ]
}
